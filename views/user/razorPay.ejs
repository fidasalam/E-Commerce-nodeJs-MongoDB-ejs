<!-- views/rayzorPay.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
        }

        
        .container {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            background-color: #ffffff;
        }

        h1 {
            color: #007bff;
        }

        p {
            font-size: 18px;
            margin: 10px 0;
        }

        button {
            background-color: #007bff;
            color: #ffffff;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<body>

    <div class="container">
        <h1> Order Details</h1>

        <p><strong>Order ID:</strong> <%= order.id %></p>
        <p><strong>Amount:</strong> <%= order.amount / 100 %> INR</p>
        <p><strong>Currency:</strong> <%= order.currency %></p>
        <!-- Add more order details as needed -->

        <button id="rzp-button1">Pay Now</button>

        <!-- Add any additional content as needed -->
    </div>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

    <script>
        $(document).ready(function () {
            var order_id = '<%= order.id %>'; // Use the correct variable name

            var options = {
                "key": "rzp_test_W6OqPxgU2L2gKQ",
                "amount": '<%= order.amount %>',
                "currency": "INR",
                "name": "ECOM",
                "description": "Test Transaction",
                "image": "https://example.com/your_logo",
                "order_id": order_id, // Use the correct variable name
                "handler": function (response) {
                     alert(response.razorpay_payment_id);
                    alert(response.razorpay_order_id);
                    alert(response.razorpay_signature);
                    verifyPayment(response, order_id); // Use the correct variable name
                },
                "prefill": {
                    "name": "Gaurav Kumar",
                    "email": "gaurav.kumar@example.com",
                    "contact": "9000090000"
                },
                "notes": {
                    "address": "Razorpay Corporate Office"
                },
                "theme": {
                    "color": "#007bff"
                }
            };

            function verifyPayment(response, order) { // Use the correct variable name
                $.ajax({
                    url: '/user/verify-payment',
                    data: {
                        payment: response,
                        order: order
                    },
                    method: 'POST',
                    success: function (response) {
                        console.log('Payment verification successful:', response);

                        if (response.status === 'success') {
                            window.location.href = '/user/thankyou';
                        }
                    },
                    error: function (error) {
                        console.error('Payment verification failed:', error);
                    }
                });
            }

            var rzp1 = new Razorpay(options);

            $('#rzp-button1').on('click', function (e) {
                rzp1.open();
                e.preventDefault();
            });
        });
    </script>
</body>

</html>
