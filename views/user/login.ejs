                    <!-- Login Button -->
                    <button type="submit" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                        Login
                    </button>
                    <!-- Register Link -->
                    <p class="stext-107 cl6 txt-center p-t-8">
                        If you don't have an account yet, <a href="/user/register" class="cl2">Please SignUp</a>.
                    </p>
                    <!-- Forgot Password Link -->
                    <p class="stext-107 cl6 txt-center p-t-8">
                        <a href="/user/forgot-password" class="cl2">Forgot Password?</a>
                    </p>
                </form>
            </div>

            <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
                <div class="how-bor1 ">
                    <div class="hov-img0">
                        <img src="images/about-01.jpg" alt="IMG">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>	

