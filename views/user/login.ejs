                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="username" placeholder="Username">
                    </div>
                   <!-- Password Field -->

                <!-- Password Field -->
                <div class="bor8 m-b-20 how-pos4-parent relative" style="display: flex; align-items: center;">
                    <input id="password" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="password" name="password" placeholder="Password" style="flex: 1;">
