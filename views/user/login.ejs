  <!-- Header -->
  <%- include('../partials/header') %>


  <!-- Title page -->
  <section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('images/bg-01.jpg');">
      <h2 class="ltext-105 cl0 txt-center">
          Login
      </h2>
  </section>	
  <% if (messages.error) { %>
    <div class="alert alert-danger">
      <%= messages.error %>
    </div>
  <% } %>
  <!-- Content page -->
  <section class="bg0 p-t-104 p-b-116">
      <div class="container">
          <div class="flex-w flex-tr">
              <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                  <!-- Your login form can go here -->
                  <form action="/user/login" method="post">
                    <h4 class="mtext-105 cl2 txt-center p-b-30">
                        Enter Your Details
                    </h4>

                      <!-- Add your login form fields here -->
                      <div class="bor8 m-b-20 how-pos4-parent">
                          <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="username" placeholder="Username">
                          
                      </div>
                      
                      <div class="bor8 m-b-20 how-pos4-parent">
                          <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="password" name="password" placeholder="Password">
                         
                      </div>

                      <button type="submit" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                          Login
                      </button>
                      <p class="stext-107 cl6 txt-center p-t-8">
                        If you don't have an account yet, <a href="/user/register" class="cl2">Please Register</a>.
                    </p>
                  </form>
              </div>

              <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
                
                    <div class="how-bor1 ">
                        <div class="hov-img0">
                            <img src="images/about-01.jpg" alt="IMG">
                        </div>
                    </div>
                </div>
              
          </div>
      </div>
  </section>	

  <!-- Footer -->
  <%- include('../partials/footer') %>