<!-- views/admin/users.ejs -->

<%- include('../partials/adminheader') %>

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Role</th>
                                <th scope="col">Block/Unblock</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((user, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <a href="#" class="show-details-link" data-bs-toggle="modal" data-bs-target="#userDetailsModal<%= user._id %>" style="text-decoration: none;color: #ffffff;">
                                            <%= user.username %>
                                        </a>
                                    </td>
                                    <td><%= user.email %></td>
                                    <td><%= user.role %></td>
                                    <td>
                                        <button class="toggle-block-btn" data-user-id="<%= user._id %>">
                                            <%= user.isBlocked ? 'Unblock' : 'Block' %>
                                        </button>
                                    </td>
                                    <td>
                                        <a href="/admin/delete-user/<%= user._id %>" class="toggle-block-btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                                    </td>
                                    <!-- Modal for user details -->
                                    <div class="modal fade" id="userDetailsModal<%= user._id %>" tabindex="-1" aria-labelledby="userDetailsModalLabel<%= user._id %>" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title toggle-block-btn" id="userDetailsModalLabel<%= user._id %>">User Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <!-- Display user details here -->
                                                    <p>Username: <%= user.user %></p>
                                                    <p>Email: <%= user.email %></p>
                                                    <p>Role: <%= user.role %></p>
                                                    <p>Phone: <%= user.phone %></p>
                                                    <p>Address: <%= user.address %></p>
                                                    <!-- Add more details as needed -->
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <a href="/admin/add-user" class="btn btn-primary btn-block text-uppercase mb-3">Add new user</a>
            </div>
        </div>
    </div>
</div>

<!-- Add this script at the bottom of your user list view -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleButtons = document.querySelectorAll('.toggle-block-btn');
        const showDetailsLinks = document.querySelectorAll('.show-details-link');

        toggleButtons.forEach(button => {
            button.addEventListener('click', async function () {
                const userId = button.getAttribute('data-user-id');

                try {
                    const response = await fetch(`/admin/block-user/${userId}`, {
                        method: 'POST',
                    });

                    if (!response.ok) {
                        throw new Error('Failed to block/unblock user');
                    }

                    const user = await response.json();
                    // Update the button text based on the new user status
                    button.textContent = user.isBlocked ? 'Unblock' : 'Block';
                } catch (error) {
                    console.error('Error:', error.message);
                }
            });
        });

        showDetailsLinks.forEach(link => {
            link.addEventListener('click', function () {
                // Modal will be triggered automatically
            });
        });
    });
</script>

<style>
    /* Add this CSS to your existing styles */

    .toggle-block-btn {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
        background-color: #2c2b2b;
    }

    .toggle-block-btn:hover {
        background-color: #404141;
    }

    .toggle-block-btn:focus {
        outline: none;
        box-shadow: none;
    }

    .toggle-block-btn:active {
        transform: translateY(1px);
    }

    .modal-header {
        background-color: #007bff;
        color: #fff;
        border-bottom: none;
    }

    .modal-title {
        font-weight: bold;
    }

    .modal-content {
        border-radius: 10px;
    }
</style>

<%- include('../partials/adminfooter') %>
