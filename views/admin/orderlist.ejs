    input.status-radio.delivered:checked + .form-check-label::before {
        background-color: #da534f;
        border-color: #da534f;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const statusRadios = document.querySelectorAll('.status-radio');

        statusRadios.forEach(radio => {
            radio.addEventListener('change', async function () {
                const orderId = radio.getAttribute('data-order-id');
                const status = document.querySelector(`input[name="status${orderId}"]:checked`).value;
                const currentDate = new Date().toISOString();
                
                // Get the index of the current status
                const currentIndex = status === 'placed' ? 0 : status === 'shipping' ? 1 : 2;

                // Check if the status is in sequential order
                const sequential = Array.from(statusRadios)
                    .filter(radio => radio.getAttribute('data-order-id') === orderId)
                    .every((radio, index) => {
                        if (status === 'delivered' && radio.value === 'placed') {
                            return true; // Allow 'Placed' if 'Delivered' is selected
                        }
                        if (index <= currentIndex) {
                            return radio.checked; // Allow checked radios up to the current index
                        } else {
                            return !radio.checked; // Disallow checked radios after the current index
                        }
                    });

                if (!sequential) {
                    // If status is not in sequential order, display an alert
                    let alertMessage;
                    switch (status) {
                        case 'placed':
                            alertMessage = 'Please ship the order before marking it as Delivered.';
                            break;
                        case 'shipping':
                            alertMessage = 'Please mark the order as Delivered after shipping.';
                            break;
                        case 'delivered':
                            alertMessage = 'The order has already been delivered.';
                            break;
                        default:
                            alertMessage = 'Invalid status selected.';
                            break;
                    }
                    alert(alertMessage);
                    this.checked = false; // Uncheck the current radio button
                    return;
                }

                try {
                    const response = await fetch(`/admin/updateStatus/${orderId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ status, currentDate }),
                    });

                    if (!response.ok) {
                        throw new Error('Failed to update order status');
                    }

                    const updatedOrder = await response.json();

                    // Update the displayed status on the client side
                    const statusCell = document.querySelector(`[data-order-id="${orderId}"] .order-status`);
                    if (statusCell) {
                        statusCell.textContent = status;
                    }
                } catch (error) {
                    console.error('Error:', error.message);
                }
            });
        });
    });
</script>


